<h1>Article#index</h1>
<div class="containers">
  <ul class="list-group list-group-flush w-50">
    <% @articles.each do |article| %>
      <li class="list-group-item">
        <h2>
          <%= link_to article.title, article_path(article.id) %>
        </h2>
        <p><%= article.content[0..100] %></p>
      </li>
    <% end %>
  </ul>
</div>
