<h1>Update Article</h1>

<div class="container d-flex justify-content-center">
  <%= form_for(@article) do |f| %>
    <p>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title, :size => "100%" %>
    </p>
    <p>
      <%= f.label :content %>
      <br>
      <%= f.text_area(:content, :size => "100x10") %>
    </p>
    <%= f.submit %>
  <% end %>
</div>
